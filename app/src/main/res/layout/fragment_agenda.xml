<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".view.ui.fragments.AgendaFragment">

    <TextView
        android:id="@+id/agendaTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Cita programada"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondaryColor"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/style_borde_text"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/agendaTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/perfilAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="15sp"
            android:textColor="@color/secondaryColor"/>

        <TextView
            android:id="@+id/nameAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre psicologo"
            android:textSize="15sp"
            android:textColor="@color/secondaryColor"/>

        <TextView
            android:id="@+id/cityAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textSize="15sp"
            android:textColor="@color/secondaryColor"/>

        <TextView
            android:id="@+id/fechaAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="15sp"
            android:textColor="@color/secondaryColor"/>

        <TextView
            android:id="@+id/horaAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textSize="15sp"
            android:textColor="@color/secondaryColor"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>